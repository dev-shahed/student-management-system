# ==============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values
# The .env file will be ignored by git for security

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Neon DB (Production)
NEON_DB_URL=jdbc:postgresql://your-endpoint.aws.neon.tech:5432/your-database?sslmode=require
NEON_DB_USERNAME=your_username
NEON_DB_PASSWORD=your_password

# Local PostgreSQL (Development)
LOCAL_DB_URL=jdbc:postgresql://localhost:5432/your_local_db
LOCAL_DB_USERNAME=postgres
LOCAL_DB_PASSWORD=your_local_password

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate a secure random string (256-bit recommended)
# You can use: openssl rand -hex 32
JWT_SECRET=your_256_bit_secret_key_here
JWT_EXPIRATION_TIME=86400000

# ==============================================
# SPRING SECURITY
# ==============================================
SPRING_SECURITY_USERNAME=admin
SPRING_SECURITY_PASSWORD=your_secure_admin_password

# ==============================================
# APPLICATION SETTINGS
# ==============================================
SPRING_PROFILES_ACTIVE=development
LOG_LEVEL=INFO
